{
  "name": "claude-code-ts",
  "version": "1.0.0",
  "description": "TypeScript-based AI coding agent CLI tool for ML training environments",
  "type": "module",
  "bin": {
    "claude-code-ts": "./dist/cli.js"
  },
  "scripts": {
    "dev": "bun run src/cli.tsx",
    "build": "bun build src/cli.tsx --outdir dist --target bun --format esm",
    "start": "bun run dist/cli.js",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "agent",
    "cli",
    "llm",
    "ml-training",
    "coding-assistant",
    "bun",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "chalk": "^5.4.1",
    "commander": "^12.1.0",
    "conf": "^13.0.1",
    "dotenv": "^16.4.7",
    "env-paths": "^3.0.0",
    "execa": "^9.5.2",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "ink": "^5.1.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "inquirer": "^12.3.0",
    "nanoid": "^5.0.9",
    "ollama": "^0.6.3",
    "openai": "^4.73.0",
    "react": "^18.3.1",
    "which": "^5.0.0",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@types/which": "^3.0.4",
    "bun-types": "^1.1.38",
    "typescript": "^5.7.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
