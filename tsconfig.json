{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // JSX for ink (needed at root level for legacy src)
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    // Path aliases for legacy src (during transition)
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/types/*": ["src/types/*"],
      "@/utils/*": ["src/utils/*"],
      "@/core/*": ["src/core/*"],
      "@/tools/*": ["src/tools/*"],
      "@/ui/*": ["src/ui/*"],
      "@claude-x/core": ["packages/core/src/index.ts"],
      "@claude-x/core/*": ["packages/core/src/*"]
    }
  },
  "references": [
    { "path": "packages/core" },
    { "path": "packages/cli" }
  ],
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "packages"
  ]
}
